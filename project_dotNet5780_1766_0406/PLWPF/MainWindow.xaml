<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <LinearGradientBrush x:Key="ButtonsBrush" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#FFF3F3F3" Offset="0"/>
            <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            <GradientStop Color="#FF19347A" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid>
        <Button Content="Add Host" HorizontalAlignment="Center" Margin="388,184,85,186"
                VerticalAlignment="Center" Width="319" Background ="{StaticResource ButtonsBrush}"
                FontFamily="Agency FB" FontSize="36"/>

        <Button Content="Add Guest Request" HorizontalAlignment="Right" Margin="0,75,85,296"
            VerticalAlignment="Center" Width="319" Background ="{StaticResource ButtonsBrush}"
            FontFamily="Agency FB" FontSize="36" Click="Button_Click"/>
    </Grid>
</Window>
